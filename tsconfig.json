{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["es2018", "dom"],
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./",
    "downlevelIteration": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
